<%= simple_form_for @post, html: {class: 'form-horizontal', multipart: true} do |f| %>
  <div class="form-group">
  <h5>Set the image</h5>
  <%= f.input :image %>
  <div class="form-group text-left">
  <%= f.input :caption, class: 'form-control' %>
  <%= f.button :submit, class: 'btn-success' %>
  </div>
  </div>
<% end %>