<!DOCTYPE html>
<html>
<head>
  <title>InstaRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/nav' %>

<div class="container">
  <% flash.each do |flash, message| %>
    <%= content_tag(:div, message, class: [:alert, alert_for(flash)]) %>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
